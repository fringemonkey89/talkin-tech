<article>
    <a href="/profile">Back to Dashboard</a>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <div>
            <input name="post-title" type="text" value="{{post.title}}">
        </div>
        <div>
            <textarea name="post-body" type = "text">{{post.content}}</textarea>
        </div>
        <div>
            by{{post.user.username}} on {{format_date post.created_at}}
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a> 
        </div>
        <div class="edit-button-div">
            <button type="submit">Save post</button>
            <button type="button" class="delete-post-btn">Remove Post</button>
        </div>
    </form>
    <form class="comment-form">
        <div>
            <textarea name="comment-body"></textarea>
        </div>
        <div>
            <button type="submit"> add a comment!</button>
        </div>
    </form>
</article>

{{> comments post.comments}}
<script src="../../public/javascript/edit-post.js"></script>
<script src="../../public/javascript/delete-post"></script>
<script src="../../public/javascript/comments.js"></script>